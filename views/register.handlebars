<div class="main-container">
    <div class="top-main">
        <div class="main-title">
            <h3>before LOGIN or SIGN THE PETITION, PLEASE REGISTER!</h3>
        </div>
        <div class="wrong">

            {{wrong}}
        </div>
    </div>

    <div class="register-main">
        <form method="post" class="row-three">
            <div class="counter">
                {{numberOfSigners}}
                Have signed, be part of them!
            </div>

            <input
                class="input"
                type="text"
                name="firstName"
                placeholder="First Name"
                autocomplete="off"
            />
            <input
                class="input"
                type="text"
                name="lastName"
                placeholder="Last Name"
                autocomplete="off"
            />
            <input
                class="input"
                type="text"
                name="email"
                placeholder="Electronic mail"
                autocomplete="off"
            />
            <input
                class="input"
                type="Password"
                name="password"
                placeholder="Password"
                autocomplete="off"
            />

            <button id="inputBtn">Register</button>

            <div class="log-in">
                If you are already a member, please
                <a href="/login"> log-in</a>
            </div>

        </form>

    </div>
</div>
<div class="signers-container">
    <div class="signers-title">
        <h1>List of all the Signers:
        </h1>
    </div>
    <div class="signers-results">
        <h6>FIRST and LAST NAME ( AGE, CITY )</h6>
    </div>
    <section id="signers">

        {{#each results}}
            <div class="results">
                {{#if url}}
                    <h6>
                        <a target="_blank" href="{{url}}">
                            {{first}}
                            {{last}}</a>
                        (
                        {{age}},
                        <a
                            class="signersLink"
                            href="signers/{{city}}"
                        >{{city}}</a>)
                    </h6>

                {{else}}
                    <h6>
                        {{first}}
                        {{last}}
                        (
                        {{age}},
                        <a
                            class="signersLink"
                            href="signers/{{city}}"
                        >{{city}}</a>)
                    </h6>
                {{/if}}

                {{!-- <h6><a href="{{url}}">
                        {{first}}
                        {{last}}</a>
                    ({{age}},
                    <a class="signersLink" href="signers/{{city}}">
                        {{city}}
                    </a>)</h6> --}}
            </div>
        {{/each}}
    </section>

</div>